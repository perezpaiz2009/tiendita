<h1>Productos</h1>

<% @products.each do |product| %>
<%= link_to product_path(product),class: 'product' do %>
<div> 
<h2><%= product.title  %></h2>
<%= image_tag product.photo,width: 200 if product.photo.attached? %> 
</div>
<div>Precio: $
<span><%=  product.price %></span><br>
</div>

<div>
<span>Descripcion:<%=  product.description %></span>
</div>
<% end %>
<% end %>